
@{
    ViewBag.Title = "ImportExcel";
    Layout = "~/Views/Shared/Template.cshtml";
}
@model dynamic
<div class="content-wrapper" style=" background-color: white; ">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                    <ol class="breadcrumb float-sm-left">

                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"><a href="/Admin">Quản lí câu hỏi</a></li>
                        <li class="breadcrumb-item active"> Cập nhật câu hỏi từ file excel</li>

                    </ol>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <a href="/Admin" class="btn btn-secondary" style="color: #fafcfb; background-color: #bfcad1;border:none">
                            <i class="fa fa-reply"></i> Quay lại

                        </a>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div>
                <!-- Small boxes (Stat box) -->

                <div class="row">
                    <div class="col-lg-3 col-6">
                        <!-- small box -->
                        <select class="custom-select" id="id_dm" name="id_dm">
                            <option value="0" selected>Danh Mục</option>
                            @foreach (var item in Model.list_dm)
                            {
                                <option value="@item.ID_DM">@item.NameDM</option>
                            }



                        </select>
                    </div>
                    <!-- ./col -->
                    <div class="col-lg-3 col-6">
                        <!-- small box -->
                        <select class="custom-select" id="id_dv" name="id_dv">
                            <option value="0" selected>Đơn Vị</option>
                            @foreach (var item in Model.list_dv)
                            {
                                <option value="@item.ID_DV">@item.NameDV</option>
                            }



                        </select>
                    </div>

                    <div class="col-lg-3 col-6">
                        <!-- small box -->
                        <select class="custom-select" id="id_mt" name="id_mt">
                            <option value="0" selected>Môn Thi</option>
                            @foreach (var item in Model.list_mt)
                            {
                                <option value="@item.ID_MT">@item.Name_MT</option>
                            }



                        </select>
                    </div>

                    <div class="col-lg-3 col-6">
                        <!-- small box -->
                        <input id="datepicker" required name="enddate" placeholder="dd-mm-yyyy" readonly="true" data-date-format="DD MMMM YYYY" />
                    </div>
                    <!-- ./col -->
                </div>
                <!-- /.row -->
                <!-- Small boxes (Stat box) -->

                <div class="row form-group mt-5">



                    <div class="col-lg-3" style="position: relative">
                        <input type="file" id="upFile" name="upFile" class="form-control"
                               style="border: none;overflow: hidden;">
                    </div>

                    <div class="col-lg-2">

                        <button class="btn btn-success" onclick="CapNhatData()"><i class="fas fa-upload"></i> Tải file</button>
                    </div>
                    <div class="col-lg-6">

                        <a class="btn btn-primary" href="/Home/DownLoadTemplate" ><i class="fas fa-download"></i> Tải mẫu</a>
                    </div>

                </div>
            </div>
            <!-- /.row -->
        </div>



</div>
    </section>

</div>

<script src="~/Scripts/Customize/HandleImport.js"></script>